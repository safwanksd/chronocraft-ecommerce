<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" rel="stylesheet">
    <meta http-equiv="Cache-Control" content="no-store, no-cache, must-revalidate">
    <link rel="stylesheet" href="/css/admin-style.css">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <style>
        /* Custom styles for dark grey and white theme, matching the provided image */
        .sidebar {
            background-color: #2d2d2d; 
            color: #ffffff; 
            width: 200px; 
            height: calc(100vh - 80px); 
            position: fixed;
            top: 80px; 
            left: 0;
            padding: 1rem 0.5rem; 
            font-family: 'Poppins', sans-serif;
            font-weight: 400; 
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.3); 
            z-index: 900;
        }

        .sidebar a {
            color: #ffffff; 
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 0.6rem 0.8rem; 
            margin-bottom: 0.3rem; 
            border-radius: 4px; 
            transition: background-color 0.2s ease; 
            font-size: 0.9rem; 
        }

        .sidebar a i {
            margin-right: 0.6rem; 
            font-size: 1.1rem; 
        }

        .sidebar a:hover, .sidebar a.active {
            background-color: #444; 
            color: #ffffff; 
        }

        .sidebar a.active {
            background-color: #ffffff; 
            color: #2d2d2d; 
            font-weight: 500; 
            border-left: 4px solid #2d2d2d; 
        }
    </style>
</head>

<nav class="sidebar">
    <a href="/admin/dashboard"><i class='bx bx-grid-alt'></i> Dashboard</a>
    <a href="/admin/orders"><i class='bx bx-cart'></i> Orders</a>
    <a href="/admin/products"><i class='bx bx-box'></i> Products</a>
    <a href="/admin/users"><i class='bx bx-user'></i> Users</a>
    <a href="/admin/categories"><i class='bx bx-category'></i> Categories</a>
    <a href="/admin/brands"><i class='bx bx-store'></i> Brands</a>
    <a href="/admin/coupons"><i class='bx bx-gift'></i> Coupons</a>
    <a href="/admin/sales-report"><i class='bx bx-image'></i> Sales Report</a>
    <a href="/admin/wallet"><i class='bx bx-credit-card'></i> Wallet Trans</a>
    <a href="/admin/offers"><i class='bx bx-tag-alt'></i> Offers</a>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get current path
        const currentPath = window.location.pathname;
        
        // Get all sidebar links
        const sidebarLinks = document.querySelectorAll('.sidebar a');
        
        // Loop through links and add active class to matching path
        sidebarLinks.forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });
    });

    // Toast notification function for consistency (already defined in header, but included here for reference)
    function showToast(message, type = 'success') {
        const toast = document.createElement('div');
        toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0 position-fixed top-0 end-0 m-3`;
        toast.style.zIndex = '1050';
        toast.innerHTML = `
            <div class="d-flex">
                <div class="toast-body">${message}</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        `;
        document.body.appendChild(toast);
        const bsToast = new bootstrap.Toast(toast);
        bsToast.show();

        setTimeout(() => {
            bsToast.hide();
            toast.remove();
        }, 3000); // Auto-hide after 3 seconds
    }
</script>

