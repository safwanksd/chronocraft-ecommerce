<!DOCTYPE html>
<html lang="en">
<head>
    <title>Category Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin-style.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>
    <%- include('../partials/admin/header.ejs') %>

    <%- include('../partials/admin/sidebar.ejs') %>

    <div class="content">
        <h2 class="mb-4 text-center">Category Management</h2>

        <div class="card shadow-sm mb-4">
            <div class="card-header">
                Add New Category
            </div>
            <div class="card-body">
                <form id="addCategoryForm" class="row">
                    <div class="col-md-5">
                        <input type="text" id="categoryName" class="form-control" placeholder="Enter category name">
                    </div>
                    <div class="col-md-5">
                        <input type="text" id="categoryDescription" class="form-control" placeholder="Enter category description">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success w-100">Add Category</button>
                    </div>
                </form>
            </div>
        </div>

        <form action="/admin/categories" method="GET" class="row mb-4">
            <div class="col-md-6">
                <input type="text" name="search" class="form-control" placeholder="Search categories..." value="<%= search || '' %>">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
            <div class="col-md-2">
                <a href="/admin/categories" class="btn btn-secondary w-100">Reset</a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Action</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (categories.length > 0) { %>
                        <% categories.forEach(category => { %>
                            <tr>
                                <td><%= category.name %></td>
                                <td><%= category.description %></td>
                                <td id="status-<%= category._id %>">
                                    <span class="badge <%= category.isListed ? 'bg-success' : 'bg-danger' %>">
                                        <%= category.isListed ? 'Listed' : 'Unlisted' %>
                                    </span>
                                </td>
                                
                                <td>
                                    <button id="toggle-btn-<%= category._id %>" 
                                            class="btn <%= category.isListed ? 'btn-danger' : 'btn-success' %>" 
                                            onclick="updateCategoryStatus('<%= category._id %>')">
                                        <%= category.isListed ? 'Unlist' : 'List' %>
                                    </button>
                                </td>
                                                                
                                <td>
                                    <a href="/admin/categories/edit/<%= category._id %>" class="btn btn-warning">Edit</a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center text-muted">No categories found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <nav>
            <ul class="pagination justify-content-center">
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage? 'active': '' %>">
                        <a class="page-link" href="/admin/categories?page=<%= i %>&search=<%= search || '' %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>

    <script src="/js/category.js"></script>
</body>
</html>