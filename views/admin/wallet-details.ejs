<!-- admin/wallet-details.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Transaction Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-bootstrap-4/bootstrap-4.min.css">
    <link rel="stylesheet" href="/css/admin-style.css">
    <style>
        .card {
            max-width: 800px;
            margin: 20px auto;
        }

        .btn-primary {
            background-color: #4723D9;
            border-color: #4723D9;
        }

        .btn-primary:hover {
            background-color: #3a1ea8;
            border-color: #3a1ea8;
        }
    </style>
</head>

<body>
    <%- include('../partials/admin/header.ejs') %>
        <%- include('../partials/admin/sidebar.ejs') %>

            <div class="content">
                <h2 class="mb-4">Transaction Details</h2>

                <% if (error) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                    <% } else if (!transaction || !user) { %>
                        <div class="alert alert-warning">No transaction data available</div>
                        <% } else { %>
                            <div class="card">
                                <div class="card-header">
                                    <h5>Transaction ID: <%= transaction._id.toString() %>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <h6>User Details</h6>
                                    <p><strong>Name:</strong>
                                        <%= user.name %>
                                    </p>
                                    <p><strong>Email:</strong>
                                        <%= user.email %>
                                    </p>
                                    <p><strong>Phone:</strong>
                                        <%= user.phone %>
                                    </p>

                                    <hr>

                                    <h6>Transaction Details</h6>
                                    <p><strong>Transaction ID:</strong>
                                        <%= transaction._id.toString() %>
                                    </p>
                                    <p><strong>Date:</strong>
                                        <%= transaction.date.toLocaleDateString() %>
                                    </p>
                                    <p><strong>Type:</strong>
                                        <%= transaction.type %>
                                    </p>
                                    <p><strong>Amount:</strong> â‚¹<%= transaction.amount.toFixed(2) %>
                                    </p>
                                    <p><strong>Status:</strong>
                                        <%= transaction.status %>
                                    </p>

                                    <% if (isOrderRelated && orderId) { %>
                                        <p><strong>Source:</strong> Order Related</p>
                                        <a href="/admin/orders/<%= orderId %>" class="btn btn-primary btn-sm">
                                            View Order Details
                                        </a>
                                        <% } %>
                                </div>
                            </div>
                            <% } %>

                                <div class="mt-3">
                                    <a href="/admin/wallet" class="btn btn-secondary">Back to Transactions</a>
                                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <% if (error) { %>
                <script>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '<%= error %>',
                        confirmButtonColor: '#4723D9'
                    });
                </script>
                <% } %>
</body>

</html>