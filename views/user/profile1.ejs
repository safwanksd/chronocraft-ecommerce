<!-- views/user/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - ChronoCraft</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> 
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
</head>
<body>
    <%- include('../partials/user/header.ejs') %>
    <div class="profile-container">
        <h1>My Profile</h1>
        <img src="<%= user.profileImage %>" alt="Profile Image" width="100" onerror="this.src='/images/default-profile.jpg';">
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Email:</strong> <%= user.email || 'Not set' %></p>
        <p><strong>Phone:</strong> <%= user.phone || 'Not set' %></p>

        <h2>Addresses</h2>
        <% if (addresses.length > 0) { %>
            <ul>
                <% addresses.forEach((address) => { %>
                    <li>
                        <%= address.street %>, <%= address.city %>, <%= address.state %> - <%= address.pincode %>
                        <% if (address.isDefault) { %> (Default) <% } %>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No addresses added yet.</p>
        <% } %>
        <a href="/user/profile/addresses">Manage Addresses</a> |

        <h2>Orders</h2>
        <p>Your orders will be displayed here soon.</p>

        <a href="/user/profile/edit">Edit Profile</a> |
        <% if (!user.googleId) { %>
            <a href="/user/profile/change-password">Change Password</a> |
        <% } %>
        <a href="/user/home">Back to Home</a>
    </div>
    <%- include('../partials/user/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</body>
</html>